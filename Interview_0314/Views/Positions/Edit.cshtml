@model Interview_0314.Models.Position

@{
    ViewData["Title"] = "編輯職務";
}

<h1>編輯職務</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">隊伍</label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId">
                    <option value="0" selected>請選擇隊伍</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">職稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="存檔" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回列表</a>
</div>

